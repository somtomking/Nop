@using Telerik.Web.Mvc.UI;
@using Nop.Services.Customers;
@using Nop.Core.Domain.Catalog;

@{    
    var channelList = new List<SelectListItem>();
    channelList.Add(new SelectListItem()
    {
        Text = "红色",
        Value = "red"
    });
    channelList.Add(new SelectListItem()
    {
        Text = "绿色",
        Value = "green"
    });
    channelList.Add(new SelectListItem()
    {
        Text = "黄色",
        Value = "yellow"
    });
}

@Html.Telerik().DropDownList().Name("BackgroundColor").BindTo(channelList)