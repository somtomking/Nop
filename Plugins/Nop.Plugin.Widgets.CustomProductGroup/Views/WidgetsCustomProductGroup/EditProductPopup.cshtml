@{
    Layout = "~/Administration/Views/Shared/_AdminPopupLayout.cshtml";
}
@model ProductModel
@using Nop.Plugin.Widgets.CustomProductGroup.Models;
@using (Html.BeginForm())
{
    <div class="section-header">
        <div class="title">
            <img src="@Url.Content("~/Administration/Content/images/ico-configuration.png")" alt="" />
            @T("Admin.Common.Edit")
        </div>
        <div class="options">
            <input type="submit" name="save" class="t-button" value="@T("Admin.Common.Save")" />
            <input type="button" name="close" class="t-button" value="@T("Admin.Common.Close")" onclick="window.close(); return false;" />
        </div>
    </div>
    @Html.Partial("Nop.Plugin.Widgets.CustomProductGroup.Views.WidgetsCustomProductGroup._CreateOrUpdateProduct", Model)   
}