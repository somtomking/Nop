@{
    var gridPageSize = EngineContext.Current.Resolve<Nop.Core.Domain.Common.AdminAreaSettings>().GridPageSize;
}
@model ProductModel
@using Nop.Plugin.Widgets.CustomProductGroup.Models;
@using Nop.Core.Domain.Common;
@using Nop.Web.Framework;
@using Nop.Core.Infrastructure;

@Html.HiddenFor(model => model.CustomProductGroupItemId)
@if (ViewBag.RefreshPage == true)
{
    <script type="text/javascript">
        try {
            window.opener.document.getElementById("btnRefresh").click();
            window.opener.opener.document.getElementById("btnRefresh").click();
        }catch (e) { }
        window.close();
    </script>
}
@Html.ValidationSummary(false)
<table class="adminContent">
    <tr>
        <td class="adminTitle">
            @Html.NopLabelFor(model => model.Plantform):
        </td>
        <td class="adminData">
            @Html.DropDownListFor(model => model.Plantform, new List<SelectListItem> { new SelectListItem { Text = "所有平台", Value = ((int)PlantformType.Default).ToString() }, new SelectListItem { Text = "PC", Value = ((int)PlantformType.PC).ToString() }, new SelectListItem { Text = "APP", Value = ((int)PlantformType.APP).ToString() } })
            @Html.ValidationMessageFor(model => model.Plantform)
        </td>
    </tr>
    <tr>
        <td class="adminTitle">
            @Html.NopLabelFor(model => model.ProductId):
        </td>
        <td class="adminData">
            @Html.EditorFor(model => model.ProductId)
            @Html.ValidationMessageFor(model => model.ProductId)
            <font color="red">*</font>
            <input type="button" id="btnSelectProduct"  value="选择商品" onclick="javascript:OpenWindow('@(Url.Action("RelatedProductAddPopup", "WidgetsCustomProductGroup"))    ', 800, 800, true); return false;" class="t-button" />
        </td>
    </tr>
    <tr style="display: none;">
        <td class="adminTitle">
            @Html.NopLabelFor(model => model.PictureId):
        </td>
        <td class="adminData">
            @Html.EditorFor(model => model.PictureId)
            @Html.ValidationMessageFor(model => model.PictureId)
        </td>
    </tr>
    <tr>
        <td class="adminTitle">
            @Html.NopLabelFor(model => model.DisplayOrder):
        </td>
        <td class="adminData">
            @Html.EditorFor(model => model.DisplayOrder)
            @Html.ValidationMessageFor(model => model.DisplayOrder)
            <font color="red">*</font>
        </td>
    </tr>
</table>
