@model WishlistModel
@using Nop.Web.Models.ShoppingCart;
<div class="popBox hidden" id="fixedFlyoutWishlist">
    <span class="arrow"></span>
    <ul>
        @for (int i = 0; i < Model.Items.Count; i++)
        {
            var item = Model.Items[i];
            <li class="clearfix">
                <p class="pic">
                    <img alt="@item.Picture.AlternateText" src="@item.Picture.ImageUrl" title="@item.Picture.Title" />
                </p>
                <p class="text">
                    <a href="@Url.RouteUrl("Product", new { SeName = item.ProductSeName })"  target="_blank">@item.ProductName</a>
                    <span class="text-danger">@item.UnitPrice</span><span class="pull-right">×@item.Quantity</span>
                </p>
            </li>
        }
    </ul>
    <button type="button" class="btn btn-orange btn-sm pull-right" onclick="setLocation('@Url.RouteUrl("Wishlist")')">@T("Wishlist.View")</button>
</div>

