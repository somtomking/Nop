@model Nop.Web.Models.Customer.ChangeEmailStepNavModel

@if (Model.IsUpdateEmail)
{
    <div onclick="javascript:go_fa_step(1)" id="fa_1" class="step_item @if (Model.ChangeEmailStep == Nop.Web.Models.Customer.ChangeEmailStep.FirstStep)
                                                                       {<text> step_set</text>}">
        <div class="step_num">1</div>
        验证身份					
                <div class="step_right"></div>
    </div>
}
<div onclick="javascript:go_fa_step(2)" id="fa_2" class="step_item @if (Model.ChangeEmailStep == Nop.Web.Models.Customer.ChangeEmailStep.SecondStep)
                                                                   {<text> step_set</text>}"">
    <div class="step_left"></div>
    @if (Model.IsUpdateEmail)
    {
        <div class="step_num">2</div>
        <text>设置邮箱</text>
    }
    else
    {
        <div class="step_num">1</div>
        <text>设置验证邮箱 </text>
    }
    <div class="step_right"></div>
</div>
<div onclick="javascript:go_fa_step(3)" id="fa_3" class="step_item @if (Model.ChangeEmailStep == Nop.Web.Models.Customer.ChangeEmailStep.ThirdStep)
                                                                   {<text> step_set</text>}"">
    <div class="step_left"></div>
    <div class="step_num">3</div>
    @if (Model.IsUpdateEmail)
    {
        <div class="step_num">3</div>   
    }
    else
    {
        <div class="step_num">2</div>
    }
    完成					
                <div class="step_right"></div>
</div>


