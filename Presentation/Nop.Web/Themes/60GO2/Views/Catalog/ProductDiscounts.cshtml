@model IList<ProductDiscountModel>
@using Nop.Web.Models.Catalog;
@if (Model.Count > 0)
{
    foreach (var item in Model)
    {
    <div class="promotionsBox">
        <a href="javascript:void(0)">@item.Name</a>
        @if (item.StartTime.HasValue || item.EndTime.HasValue)
        {
            <p>
                @if (item.StartTime.HasValue)
                {
                    @item.StartTime.Value.Year.ToString();@T("Year")
                    @item.StartTime.Value.Month.ToString("00");@T("Month")
                    @item.StartTime.Value.Day.ToString("00");@T("Day")
                }
                @if (item.StartTime.HasValue && item.EndTime.HasValue)
                {
                    <text>—</text>
                }
                @if (item.EndTime.HasValue)
                {
                    @item.EndTime.Value.Year.ToString();@T("Year")
                    @item.EndTime.Value.Month.ToString("00");@T("Month")
                    @item.EndTime.Value.Day.ToString("00");@T("Day")
                }
            </p>
        }
    </div>
    }
}